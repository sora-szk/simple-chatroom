{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "incremental": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "types": [],
        "typeRoots": [
            "./node_modules/@types"
        ],
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*",
        "src/*.ts"
, "src/app.ts"    ]
}